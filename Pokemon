import re
f = open('D:\CAT\Downloads\lab1-main\pokemon_full.json')
kolvo_vseh = 0
kolvo_bukv = 0
dlina_opis = 0
max_dlina = 0
max_probel = 0
name = ''
max_name = ''
max_abilities = ''
flag = False
for i in f:
    if (i.find('"name"') > 0):
        name = i
    if (i.find('"abilities"') > 0):
        flag = True
    if flag:
        probel = i.count(' ') #вычисляет количество пробелов, для определения кол-ва слов в "abilities"
        for j in range(0,(len(i)-1)):
            if (i[j] == ' ' and i[j+1] == '"'):
                probel -=1
        if probel >= max_probel:
            max_probel = probel
            max_abilities = i

    if (i.find('description') > -1):
        dlina_opis = len(i) #определяет длину описания покемона
        if dlina_opis > max_dlina: #находит максимальное, запоминает имя
            max_dlina = dlina_opis
            max_name = name
            
    if (i.find(']') > -1)  : #поиск максимальной длины "abilities" продолжается, пока в строчке не встечена "]"
        flag = False
f.close()

file = open('D:\CAT\Downloads\lab1-main\pokemon_full.json')
full_file = file.read()
file.close()

file_bez_prep = re.sub('[\w]', '', full_file)  #файл без знаков препинания

print(f'Количество элементов в файле: ', len(full_file))
print(f'Количество символов без знаков препинания в файле: ', len(full_file) - len(file_bez_prep))
print(f'Наиболее длинное описание у покемона: {max_name[12:-2]}')
print(f'Наиболее длинное умение: {max_abilities[6:]}')
